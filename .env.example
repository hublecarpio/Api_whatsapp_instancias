# ============================================
# WhatsApp SaaS Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# Docker Registry
# ============================================
REGISTRY=docker.io/iamhuble
TAG=latest

# ============================================
# Domains (full domain with subdomain)
# ============================================
FRONTEND_DOMAIN=app.efficore.es
CORE_API_DOMAIN=api.efficore.es
WA_API_DOMAIN=wa.efficore.es

# ============================================
# Ports (internal)
# ============================================
FRONTEND_PORT=3000
CORE_API_PORT=3001
WA_API_PORT=8080

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_DB=whatsapp_saas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password-here
DATABASE_URL=postgresql://postgres:your-strong-password-here@db-host:5432/whatsapp_saas

# ============================================
# Authentication
# ============================================
SESSION_SECRET=your-session-secret-min-32-chars

# ============================================
# MinIO / S3 Storage (for media files)
# ============================================
MINIO_ENDPOINT=https://your-minio-endpoint.com
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=whatsapp-media
MINIO_PUBLIC_URL=https://your-public-minio-url.com

# ============================================
# Stripe Billing (Subscriptions)
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Create webhook at: https://dashboard.stripe.com/webhooks
# Endpoint URL: https://api.efficore.es/billing/webhook
# Events: checkout.session.completed, customer.subscription.updated,
#         customer.subscription.deleted, invoice.payment_failed
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Create product in Stripe Dashboard with $50 USD/week recurring price
# Copy the Price ID (starts with price_...)
STRIPE_PRICE_WEEKLY_50=price_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Frontend URL for Stripe redirect after payment
FRONTEND_URL=https://app.efficore.es
