# ============================================
# WhatsApp SaaS Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# Docker Registry
# ============================================
REGISTRY=docker.io/iamhuble
TAG=latest

# ============================================
# Domain (your domain for Traefik)
# ============================================
DOMAIN=efficore.es

# ============================================
# Traefik Network (external network name)
# ============================================
TRAEFIK_NETWORK=traefik_public

# ============================================
# Ports (internal - only needed if not using Traefik)
# ============================================
FRONTEND_PORT=3000
CORE_API_PORT=3001
WA_API_PORT=8080

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_DB=whatsapp_saas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password-here

# ============================================
# Authentication
# ============================================
SESSION_SECRET=your-session-secret-min-32-chars

# ============================================
# MinIO / S3 Storage (for media files)
# ============================================
MINIO_ENDPOINT=https://your-minio-endpoint.com
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=whatsapp-media
MINIO_PUBLIC_URL=https://your-public-minio-url.com
