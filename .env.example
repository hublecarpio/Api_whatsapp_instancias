# ============================================
# WhatsApp SaaS Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_DB=whatsapp_saas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password-here

# For Core API connection (auto-generated from above in docker-compose)
# DATABASE_URL=postgresql://postgres:password@postgres:5432/whatsapp_saas

# ============================================
# Authentication
# ============================================
SESSION_SECRET=your-session-secret-min-32-chars

# ============================================
# MinIO / S3 Storage (for media files)
# ============================================
MINIO_ENDPOINT=https://your-minio-endpoint.com
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=whatsapp-media
MINIO_PUBLIC_URL=https://your-public-minio-url.com

# ============================================
# Docker Registry (for Swarm deployment)
# ============================================
REGISTRY=your-registry.com
TAG=latest

# ============================================
# Domain (for Traefik routing)
# ============================================
DOMAIN=your-domain.com

# ============================================
# Service URLs (auto-configured in Docker)
# ============================================
# CORE_API_URL=http://core-api:3001
# WA_API_URL=http://whatsapp-api:8080

# ============================================
# Ports (defaults)
# ============================================
# Frontend: 5000
# Core API: 3001
# WhatsApp API: 8080
# PostgreSQL: 5432
