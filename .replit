modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg"]

[userenv]

[userenv.shared]
PORT = "5000"
BASE_URL = "http://localhost:5000"
WA_API_URL = "http://localhost:8080"
CORE_API_PORT = "3001"
CORE_API_URL = "http://localhost:3001"
WA_PORT = "8080"

[userenv.development]
FRONTEND_URL = "https://978db092-02f4-4062-bb4b-215586819a4b-00-if4lj5jm7ce2.picard.replit.dev"

[userenv.production]
FRONTEND_URL = "https://978db092-02f4-4062-bb4b-215586819a4b-00-if4lj5jm7ce2.picard.replit.dev"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WhatsApp API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Core API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "WhatsApp API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "WA_PORT=8080 npm run dev"
waitForPort = 8080

[[workflows.workflow]]
name = "Core API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd core-api && npm run dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080
